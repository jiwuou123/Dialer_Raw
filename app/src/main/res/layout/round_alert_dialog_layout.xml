<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="286.66dp"
    android:layout_height="155.33dp"
    android:id="@+id/container"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="286.66dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_alert_dialog_title_bg"
        android:orientation="horizontal" >
        <ImageView 
            android:id="@+id/imageview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/call_log_vertical_padding"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="286.66dp"
        android:layout_height="61dp"
        android:orientation="vertical" 
        android:background="@android:color/white"
        >

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"

            android:textSize="@dimen/call_log_secondary_text_size"
            android:textColor="#585858"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="286.66dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/negativeButton"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/round_alert_dialog_left_button"
            android:textColor="#464646"
            android:layout_weight="1"
            android:singleLine="true" />
        
    <View android:layout_width="1px"
          android:layout_height="fill_parent"
          android:layout_marginBottom="2dp"
          android:background="#cccccc"/>
        <Button
            android:id="@+id/positiveButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/round_alert_dialog_right_button"
            android:textColor="#464646"
            android:textSize="16sp"
            android:layout_weight="1"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>
